{
  "name": "information-manipulation-analyzer-processor",
  "version": "1.3.0",
  "main": "src/index.ts",
  "author": "Martin Ratinaud <martinratinaud@gmail.com>",
  "license": "MIT",
  "private": false,
  "prettier": "prettier-config-ambanum",
  "scripts": {
    "build": "tsc",
    "precommit": "(git diff --diff-filter=AM --name-only --staged | grep ops/roles/*/github-clone/vars/ | xargs grep -rL \"ANSIBLE\") && echo \"some vault files are not encrypted\" && exit",
    "encrypt": "grep -rL \"ANSIBLE\" ./ops/roles/*/github-clone/vars/* | xargs ansible-vault encrypt",
    "decrypt": "grep -rl \"ANSIBLE\" ./ops/roles/*/github-clone/vars/* | xargs ansible-vault decrypt",
    "prepare": "husky install",
    "start:user": "NODE_PATH=build NODE_OPTIONS='--max_old_space_size=8192' node build/index.js user",
    "start:hashtag": "NODE_PATH=build NODE_OPTIONS='--max_old_space_size=8192' node build/index.js hashtag",
    "start:server": "NODE_PATH=build NODE_OPTIONS='--max_old_space_size=8192' node build/index.js server",
    "start": "concurrently -r --kill-others --names \"hashtag,server,user\" \"yarn start:hashtag\" \"yarn start:server\" \"yarn start:user\"",
    "dev:user": "node --trace-warnings -r ts-node/register -r tsconfig-paths/register ./src/index.ts user",
    "dev:hashtag": "node --trace-warnings -r ts-node/register -r tsconfig-paths/register ./src/index.ts hashtag",
    "dev:server": "node --trace-warnings -r ts-node/register -r tsconfig-paths/register ./src/index.ts server",
    "dev": "concurrently  --kill-others --names \"hashtag,server,user\" \"yarn dev:hashtag\" \"yarn dev:server\" \"yarn dev:user\"",
    "deploy:vagrant:preproduction": "ansible-playbook ops/site.yml -i ops/inventories/dev.yml -e \"ENV=preproduction\" -vvv",
    "deploy:vagrant:production": "ansible-playbook ops/site.yml -i ops/inventories/dev.yml -e \"ENV=production\" -vvv",
    "deploy:tflmi:preproduction": "ansible-playbook ops/site.yml -i ops/inventories/production.yml -e \"ENV=tflmi-preproduction\" -vvv",
    "deploy:tflmi:production": "ansible-playbook ops/site.yml -i ops/inventories/production.yml -e \"ENV=tflmi-production\" -vvv",
    "deploy:ambnum:production": "ansible-playbook ops/site.yml -i ops/inventories/production.yml -e \"ENV=ambnum-production\" -vvv",
    "deploy:preproduction": "ansible-playbook ops/site.yml -i ops/inventories/production.yml -e \"ENV=preproduction\" -vvv",
    "deploy:production": "ansible-playbook ops/site.yml -i ops/inventories/production.yml -e \"ENV=production\" -vvv",
    "docker:build": "docker build --build-arg ENV_FILE=.env.local -t $npm_package_name .",
    "docker:run": "(docker rm $npm_package_name || true) && docker run --rm -p 4000:4000 -e PROCESSOR_NAME=docker -e TWINT_PATH=/home/ambnum/.local/bin/twint -e SNSCRAPE_PATH=/home/ambnum/.local/bin/snscrape  --name $npm_package_name -it $npm_package_name",
    "docker:run-2": "(docker rm information-manipulation-analyzer-processor-2 || true) && docker run --rm -e API=false -e PROCESSOR_ID=2 -e PROCESSOR_NAME=docker -e TWINT_PATH=/home/ambnum/.local/bin/twint -e SNSCRAPE_PATH=/home/ambnum/.local/bin/snscrape -e NB_TWEETS_TO_SCRAPE=6000 --name information-manipulation-analyzer-processor-2 -it $npm_package_name",
    "docker:ssh": "docker exec -it $npm_package_name /bin/bash",
    "test": "jest"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.19",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.22",
    "@types/mongoose": "^5.10.4",
    "@types/node": "^14.14.32",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-config-ambanum": "^1.0.1",
    "ts-jest": "^26.5.4",
    "tsconfig-paths": "^3.9.0"
  }
}
